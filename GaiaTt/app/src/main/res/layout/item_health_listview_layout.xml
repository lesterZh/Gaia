<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/backgound_line"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        >
        <TextView
            android:id="@+id/item_healthlist_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_title"
            />
        <LinearLayout
            android:id="@+id/item_dateandon_ll"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/item_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_arrow_pressed"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_below="@+id/item_healthlist_title_tv"
            />
        <TextView
            android:id="@+id/item_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_content_tv"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:background="@drawable/shape_healthlist_state"
            />
    </RelativeLayout>

</LinearLayout>
