<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:degree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/degree_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            android:text="输入质量"
            />
        <TextView
            android:id="@+id/degree_value_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:padding="10dp"
            android:text="100.0kg"
            />
        <com.gaia.member.gaiatt.ui.DegreeScaleView
            android:layout_marginTop="20dp"
            android:id="@+id/degree_scale_view"
            android:layout_width="300dp"
            android:layout_height="100dp"
            degree:max_value="300"
            degree:current_value="100"
            degree:degree_value_size="15sp"
            degree:min_degree_width="10dp"
            degree:degree_line_color="@android:color/darker_gray"
            degree:degree_value_color="@android:color/darker_gray"
            degree:select_degree_line_color="@color/blue"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/tv_wheel_save"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn_blue"
        android:text="保存"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>
