<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/backgound_line"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        >
        <TextView
            android:id="@+id/item_healthlist_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="问卷名称"
            />
        <LinearLayout
            android:id="@+id/item_dateandon_ll"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/item_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他信息"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_arrow_pressed"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问卷描述"
            android:textColor="@color/text_index"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/item_healthlist_title_tv"
            />

    </RelativeLayout>

</LinearLayout>
