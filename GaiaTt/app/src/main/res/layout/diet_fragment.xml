<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_above"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/backgound_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_vertical"
            >
            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/breakfirst"/>
            <TextView
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="早餐"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgound_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            >
            <com.gaia.member.gaiatt.healthmanage.ui.HorizontalListView
                android:id="@+id/hlv_diet_breakfirst"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:scrollbars="none"
                android:layout_height="match_parent">

            </com.gaia.member.gaiatt.healthmanage.ui.HorizontalListView>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/backgound_line"
                />
            <ImageView
                android:id="@+id/img_item_breakfast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_arrow_selector"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_above"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/backgound_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_vertical"
            >
            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/launch"/>
            <TextView
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="午餐"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgound_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            >
            <com.gaia.member.gaiatt.healthmanage.ui.HorizontalListView
                android:id="@+id/hlv_diet_lunch"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:scrollbars="none"
                android:layout_height="match_parent">

            </com.gaia.member.gaiatt.healthmanage.ui.HorizontalListView>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/backgound_line"
                />
            <ImageView
                android:id="@+id/img_item_lunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/selector_icon_arrow"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_above"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/backgound_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_vertical"
            >
            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dinner"/>
            <TextView
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="晚餐"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgound_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            >
            <com.gaia.member.gaiatt.healthmanage.ui.HorizontalListView
                android:id="@+id/hlv_diet_dinner"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:scrollbars="none"
                android:layout_height="match_parent">

            </com.gaia.member.gaiatt.healthmanage.ui.HorizontalListView>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/backgound_line"
                />
            <ImageView
                android:id="@+id/img_item_dinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/selector_icon_arrow"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_above"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGrayline"
        android:paddingTop="20dp"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/tv_diet_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-04-23"
            />
    </LinearLayout>
</LinearLayout>