<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gaia.member.gaiatt.activity.healthmanage.HealthComplaintActivity">
    <include layout="@layout/titilebar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgound_line"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/shape_edittext"
            android:padding="0dp"
            >
            <TextView
                android:id="@+id/tv_complaint_doctor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="选择投诉类别"
                android:gravity="center_vertical"
                />
            <RelativeLayout
                android:id="@+id/re_complaint_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/tv_complaint_type"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:layout_marginRight="30dp"
                    />
                <ImageView
                    android:id="@+id/img_complaint_type"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/selector_icon_arrow"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </RelativeLayout>


        <EditText
            android:id="@+id/edt_complaint_content"
            android:layout_width="match_parent"
            android:background="@drawable/shape_edittext"
            android:layout_height="200dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:hint="请输入您要投诉的内容，保证所陈述内容真实有效，我们会在最快的时间为您处理，投诉内容字数限120字。"
            android:textCursorDrawable="@null"
            android:textColor="@color/text_content"
            android:textColorHint="@color/text_hint"
            android:textSize="15sp"
            android:gravity="top"
            android:lineSpacingExtra="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <CheckBox
                android:id="@+id/cb_anonymous_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匿名投诉"
                android:layout_below="@+id/cb_commercial_insurance"
                android:textColor="@color/text_content"
                android:button="@drawable/selector_icon_check"
                />
            <TextView
                android:id="@+id/tv_complaint_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:text="投诉人：***"/>
            <TextView
                android:id="@+id/tv_complaint_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:text="投诉日期：2015-04-05"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_manager_complaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="投诉"
            android:background="@drawable/selector_btn_blue"
            />

    </LinearLayout>

</LinearLayout>
