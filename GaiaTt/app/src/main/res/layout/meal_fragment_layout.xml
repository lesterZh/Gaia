<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="416dp"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/tv_meal_commont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_meal_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主食"
            android:textColor="@color/text_index"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_meal_nai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奶类"
            android:textColor="@color/text_index"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_meal_rou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肉类"
            android:textColor="@color/text_index"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_line_commont"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/tv_line_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:visibility="invisible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/tv_line_nai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/tv_line_rou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:visibility="invisible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_meal_container"
        android:layout_width="match_parent"
        android:layout_height="299dp">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tv_meal_next"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn_blue"
        android:text="下一步"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>
