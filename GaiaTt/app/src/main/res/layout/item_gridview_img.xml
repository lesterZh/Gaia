<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/coupons"
    >
    <TextView
        android:id="@+id/item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/item_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无门槛即可食用"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:layout_above="@+id/item_content"
        android:layout_toRightOf="@+id/item_num"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元优惠券"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_num"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:id="@+id/item_ll_click"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击\n领取"
            android:textColor="@color/detail_green"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boult"
            />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>
