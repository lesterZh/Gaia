<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <CheckBox
        android:id="@+id/cb_is_selected"
        android:button="@drawable/icon_checkmarks_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/iv_goods_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/debug_image_girl"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_goods_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="商品名瑞年牌维C咀嚼片 1.5g/片*60片"
            android:paddingRight="20dp"
            android:textSize="14sp"
            android:textColor="@color/TextColorDarkGray"
             />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="center"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_arrow_selector" />

    </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_desc"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:layout_height="0dp"
            android:maxLines="1"
            android:text="描述信息"
            android:textSize="12sp"
            android:textColor="@color/TextColorLightGray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数量："
                android:textColor="@color/TextColorLightGray"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input">
            <ImageView
                android:id="@+id/iv_minus_num"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_steper_minus_selector"/>
            <TextView
                android:id="@+id/tv_goods_add_num"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="999"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/iv_plus_num"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_steper_plus_selector"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>