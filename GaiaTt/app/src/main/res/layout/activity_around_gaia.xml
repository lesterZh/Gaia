<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gaia.member.AroundGaiaActivity">

    <include layout="@layout/titilebar_layout"
        />
    <gaia.com.componentlibrary.custom.CustomIndicator
        android:id="@+id/around_gaia_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/systemBule"
        app:indicatorHeight="2dp"
        app:indicatorWidth="30dp"
        app:unSelectTextColor="@color/TextColorDarkGray"
        app:selectTextColor="@color/systemBule"
        app:titleTextSize="15sp"
        app:titleTopBottomPadding="10dp"
        >
    </gaia.com.componentlibrary.custom.CustomIndicator>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgound_line"/>
    <com.gaia.member.gaiatt.ui.CustomViewPager
        android:id="@+id/vp_around_container"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

    </com.gaia.member.gaiatt.ui.CustomViewPager>
</LinearLayout>
