<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="305dp"
    android:background="@color/blue"
    android:id="@+id/health_color_ll"
    >
    <LinearLayout
        android:id="@+id/userhead_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/userhead_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jkgl_man"
            />
        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="张正宇先生"
            android:textSize="17sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/userhealth_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="未评估"
            android:textColor="@color/white"
            android:background="@drawable/shape_assessment"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="117dp">
        <LinearLayout
            android:id="@+id/immediate_assessment_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/data_profile"
            >
            <TextView
                android:id="@+id/immediate_assessment_tv"
                android:layout_width="100dp"
                android:layout_height="30dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ing_assessment_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/img_anim_health"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/shade"
                />
           <TextView
               android:id="@+id/ing_assessment_percent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="正在评估  80%"
               android:layout_centerInParent="true"
               android:textColor="@android:color/white"
               android:textSize="18sp"
               />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
