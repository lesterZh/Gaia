<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/view_top"
            android:layout_width="3dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_progress_line_for_complaint"/>
        <View
            android:id="@+id/view_node"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_progress_node_for_complaint"/>
        <View
            android:id="@+id/view_bottom"
            android:layout_width="3dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_progress_line_for_complaint"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投诉受理"
                android:textColor="@color/TextColorDarkGray"
                android:textSize="14sp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李某"
                android:textColor="@color/TextColorDarkGray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="受理成功"
                android:textColor="@color/TextColorLightGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-05-02"
                android:textColor="@color/TextColorLightGray"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>