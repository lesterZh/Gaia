<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_healthlist_bar_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/blue"
        android:gravity="center"
        android:layout_height="55dp"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一阶段：平衡体质"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-5-2至2015-5-30"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/item_healthlist_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_title"
            android:text="精神呵护"
            />
        <TextView
            android:id="@+id/item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阶段描述阶段描述"
            android:textSize="14sp"
            android:textColor="@color/text_content"
            android:layout_below="@+id/item_healthlist_title_tv"
            />
    </RelativeLayout>
    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgound_line"/>
</LinearLayout>
