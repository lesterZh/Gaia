<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systemBackground"
    android:orientation="vertical"
    >

    <include layout="@layout/base_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_service_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/debug_image_girl"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_service_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="陪诊服务"
                            android:textColor="@color/TextColorDarkGray"
                            android:textSize="17sp"
                            />

                        <TextView
                            android:id="@+id/tv_service_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="盖亚高新店"
                            android:textColor="@color/TextColorLightGray"
                            android:textSize="14sp"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约价格："
                        android:textColor="@color/TextColorLightGray"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10元"
                        android:textColor="@color/systemBule"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_service_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:text="服务内容：新生儿畸形 新生儿感冒发烧 老人痴呆 新生儿畸形 新生儿感冒发烧 老人痴呆 "
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divideColorGray"/>

                <TextView
                    android:id="@+id/tv_area_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地区要求:不限"
                    android:textSize="14sp"
                    />
            </LinearLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="17sp"
                android:textColor="@color/TextColorLightGray"
                android:text="可预约时间"
                android:background="@color/white"
                android:gravity="center"/>
            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendar_order_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white">

            </com.prolificinteractive.materialcalendarview.MaterialCalendarView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
